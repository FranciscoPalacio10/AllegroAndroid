<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/azulAllegro"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/fondocard"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtClaseNoFinalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textColor="@color/negro"
            android:textSize="24dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="@color/blanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/txtClaseEnCurso"
                android:text="@string/materia"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtMateriaNoFinalizada"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/txtClaseEnCurso"
                android:textSize="20dp"
                android:text="@string/claseNro" />

            <TextView
                android:id="@+id/txtNroClaseEnCurso"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFechaEnCurso"
                style="@style/txtClaseEnCurso"
                android:layout_marginRight="4dp"
                android:textSize="20dp" />

            <View
                android:id="@+id/divider6"
                android:layout_width="0.1dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/negro" />

            <TextView
                android:id="@+id/txtTiempoEnCurso"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="4dp"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnContinuarClase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transeparente"
                android:drawableRight="@drawable/start"
                android:text="@string/continuarClase"
                android:textColor="@color/blanco"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnDescargarClase"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/transeparente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/descargarvideo" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>