<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/degrade"
    tools:context=".ui.core.MateriasFragment">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
        android:background="@drawable/fondotoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fondo3"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_eligetupractica"
                        android:layout_marginTop="10dp"
                        android:text="@string/txt_elige_materia"
                        style="@style/tituloHome"
                        android:textSize="30sp"
                        ></TextView>

                    <TextView
                        android:id="@+id/txt_set_ano"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_ano"
                        style="@style/tituloHome"
                        android:textSize="30sp"
                        ></TextView>
                </LinearLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="2dp"
                    android:background="@color/blanco" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <!-- TODO: Update blank fragment layout -->



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                style="@style/StyleRecicler" />



</LinearLayout>