<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/azulAllegro"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondocard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtClaseFinalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/blanco" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/txtClaseEnCurso"
                android:text="@string/materia"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/txtMateriaFinalizada"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textColor="@color/negro"
                android:textSize="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/txtClaseEnCurso"
                android:text="@string/claseNro"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/txtNroDeClaseFinalizada"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                style="@style/txtClaseEnCurso"
                android:text="@string/tipodeclase"
                android:layout_marginLeft="4dp"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/txtTipoDeClaseFinalizada"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView9"
                style="@style/txtClaseEnCurso"
                android:textSize="10dp"
                android:text="@string/fechaFinalada"

                />

            <TextView
                android:id="@+id/txtFechaFinalizado"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnRepetirClase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            android:background="@color/transeparente"
            android:drawablePadding="2dp"
            android:text="@string/repetirClase"
            android:textColor="@color/blanco"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>