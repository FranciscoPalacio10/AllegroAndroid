<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/azulAllegro"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondocard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEstiloFinalizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="35dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/blanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/txtClaseEnCurso"
                android:text="@string/nivele"
                android:textSize="25dp"
                 />

            <TextView
                android:id="@+id/txtNivelFinalizado"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="7dp"
                android:textColor="@color/negro"
                android:textSize="25dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                style="@style/txtClaseEnCurso"
                android:text="@string/profesora"
                android:textColor="@color/negro"
                android:textSize="25dp"
              />

            <TextView
                android:id="@+id/txtProfesoraFinalizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:textColor="@color/negro"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/txtClaseEnCurso"
                android:text="@string/claseNro"
                android:textColor="@color/negro"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/txtNroClaseFinalizado"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="7dp"
                android:textSize="25dp"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView9"
                style="@style/txtClaseEnCurso"
                android:text="@string/fechaFinalada"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/txtFechaFinalizado"
                style="@style/txtClaseEnCurso"
                android:layout_marginLeft="2dp"
                android:textSize="25dp"
              />
        </LinearLayout>

        <Button
            android:id="@+id/btnRepetirClase"
            android:layout_width="239dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transeparente"
            android:drawableRight="@drawable/exo_controls_repeat_one"
            android:drawablePadding="2dp"
            android:text="@string/repetirClase"
            android:textColor="@color/blanco"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>