<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/cardSelectCamara"
    android:layout_marginBottom="35dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="45dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/azulAllegro"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/transeparente"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCameraName"
            android:textColor="@color/negro"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cameraname" />

        <TextView
            android:id="@+id/txtCameraDescription"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cameraname" />

        <Button
            android:id="@+id/btnSelectCamara"
            android:background="@drawable/borde_edittext"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingStart="15dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/start"
            android:text="@string/iniciarClase" />

    </LinearLayout>

</androidx.cardview.widget.CardView>