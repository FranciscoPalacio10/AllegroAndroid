<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulAllegro"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_close_dialog_explain_pose"
        android:layout_width="45dp"
        android:layout_gravity="right"
        android:layout_height="45dp"
        android:background="@drawable/cerrarsesion"></ImageButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrucciones"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_imageview"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/posecinco" />

        <TextView
            android:id="@+id/dialogExplainPose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/explainPoseUno"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>
    </LinearLayout>


</LinearLayout>